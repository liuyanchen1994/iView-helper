{
		"name": "vscode-iview-helper",
		"displayName": "iView-helper",
		"description": "A vscode extension for iView",
		"version": "1.0.0",
		"publisher": "Damon",
		"repository": {
				"type": "git",
				"url": "https://github.com/liuyanchen1994/iView-helper"
		},
		"engines": {
				"vscode": "^1.39.2"
		},
		"icon": "logo.png",
		"categories": [
				"Snippets",
				"Other"
		],
		"activationEvents": [
				"onLanguage:html",
				"onLanguage:vue",
				"onCommand:iview-helper.search"
		],
		"contributes": {
				"commands": [
						{
								"command": "iview-helper.search",
								"title": "iview-helper.search"
						}
				],
				"keybindings": [
						{
								"command": "iview-helper.search",
								"key": "shift+cmd+i",
								"when": "editorTextFocus"
						}
				],
				"snippets": [
						{
								"language": "javascript",
								"path": "./snippets/iview.json"
						}
				],
				"configuration": {
						"type": "object",
						"title": "iView Helper Configuration",
						"properties": {
								"iview-helper.indent-size": {
										"type": "number",
										"default": 2,
										"description": "Indentation size of snippets"
								},
								"iview-helper.quotes": {
										"type": "string",
										"default": "double"
								},
								"iview-helper.link-url": {
										"type": "string",
										"default": "https://www.iviewui.com"
								}
						}
				}
		},
		"main": "./out/extension.js",
		"scripts": {
				"vscode:prepublish": "sh build.sh",
				"compile": "sh build.sh",
				"watch": "sh build.sh --watch",
				"postinstall": "node ./node_modules/vscode/bin/install",
				"test": "npm run compile && node ./node_modules/vscode/bin/test"
		},
		"devDependencies": {
				"typescript": "^3.1.4",
				"vscode": "^1.1.25",
				"tslint": "^5.8.0",
				"@types/node": "^8.10.25",
				"@types/mocha": "^2.2.42"
		},
		"dependencies": {
				"pretty": "^2.0.0",
				"shelljs": "^0.8.5"
		}
}
